# =============================================================
# Copy to .env.local for local development
# =============================================================
# In production, non-secret values come from wrangler.toml [vars]
# and secrets come from Cloudflare Worker secrets.

# ── Base path (empty for local — no reverse proxy prefix) ────
NEXT_PUBLIC_BASE_PATH=
AUTH0_BASE_URL=http://localhost:3000

# ── Auth0 ─────────────────────────────────────────────────────
AUTH0_SECRET=
AUTH0_CLIENT_ID=
AUTH0_CLIENT_SECRET=
AUTH0_ISSUER_BASE_URL=https://auth.yeevu.com
AUTH0_SESSION_NAME=yeevu_pulse_session
AUTH0_COOKIE_PATH=/
AUTH0_TRANSACTION_COOKIE_NAME=yeevu_pulse_tx
AUTH0_TRANSACTION_COOKIE_PATH=/

# ── Google OAuth ───────────────────────────────────────────────
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/gmail/callback

# ── Microsoft OAuth (Phase 2) ──────────────────────────────────
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=
MICROSOFT_OAUTH_REDIRECT_URI=http://localhost:3000/api/oauth/outlook/callback

# ── Gemini ─────────────────────────────────────────────────────
GEMINI_API_KEY=

# ── Credential encryption ──────────────────────────────────────
CREDENTIAL_ENCRYPTION_KEY=
